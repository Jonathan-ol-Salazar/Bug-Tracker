@model BugTrackerDataAccess.ViewModel.AccountViewModel

@{
    ViewData["Title"] = "Update Account";
}


<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | DataTables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">



    <!-- jQuery -->
    @*<script src="~/AdminLTE_theme/plugins/jquery/jquery.min.js"></script>*@

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>*@

</head>
<body class="hold-transition sidebar-mini">


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Update Account</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Account</li>
                            <li class="breadcrumb-item active">Edit Account</li>

                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">

                        <div class="card card-dark">
                            <div class="card-header">
                                <h3 class="card-title">Account Details</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">

                                <form asp-action="UpdateAccount" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                    @*PRE-SELECTED ATTRIBUTES TO SELECT CURRENT USER*@
                                    <div class="form-group">
                                        <select id="ID" asp-for="@Model.User.ID">
                                            <option value="@Model.User.ID" selected="selected"></option>
                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="@Model.AccountImages" class="form-control custom-file-input">
                                            <label asp-for="@Model.AccountImages" class=" custom-file-label">Choose file</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="User.Email" class="control-label"></label>
                                        <input asp-for="User.Email" class="form-control" />
                                        <span asp-validation-for="User.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.DOB" class="control-label"></label>
                                        <input asp-for="User.DOB" class="form-control" />
                                        <span asp-validation-for="User.DOB" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.About" class="control-label"></label>
                                        <input asp-for="User.About" class="form-control" />
                                        <span asp-validation-for="User.About" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.Location" class="control-label"></label>
                                        <input asp-for="User.Location" class="form-control" />
                                        <span asp-validation-for="User.Location" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.Skills" class="control-label"></label>
                                        <input asp-for="User.Skills" class="form-control" />
                                        <span asp-validation-for="User.Skills" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.Education" class="control-label"></label>
                                        <input asp-for="User.Education" class="form-control" />
                                        <span asp-validation-for="User.Education" class="text-danger"></span>
                                    </div>


                                    <div class="form-group">
                                        <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a> |
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>




                                </form>
                            </div>
                        </div>

                        

                    </div>

                </div>

            </div>
            <!-- /.container-fluid -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- page script -->
    <script>
        $(document).ready(function () {

            var ID = document.getElementById("ID");
            ID.style.display = "none";

            $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
            });

        });


    </script>
</body>
</html>